#!/bin/bash

# Constants
EXT=txt
NOTES_DIR=$HOME/Notes
DATE=$(date '+%d-%m-%Y_%H:%M:%S')


# Create notes dir if it doesn't exits
if [ ! -d $NOTES_DIR ]; then
	mkdir $NOTES_DIR
fi


# User input
NAME=$1


# Ask for file name if none was specified
if [ -z "$NAME" ]; then
	read -p "Name: " NAME
	
	# If no name is specified use the date as name
	if [ -z "$NAME" ]; then
		NAME=$DATE
	fi
fi


read -p "Prio (sometime, low, medium, high): " PRIO
read -p "Message: " MESSAGE


# Give the files the extention
NAME="$NAME.$EXT"


# Create file
touch "$NOTES_DIR/$NAME"


echo -e "Date of creation: $DATE" >> "$NOTES_DIR/$NAME"
echo -e "Prio: $PRIO" >> "$NOTES_DIR/$NAME"
echo -e "Message: $MESSAGE" >> "$NOTES_DIR/$NAME"
